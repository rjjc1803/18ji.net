@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.js"></script>
    <script src="~/Scripts/base.js"></script>
    <style>
        #main {
            width: 70%;
            height: 100%;
            margin-top: 30px;
            margin-left: 150px;
            flex-wrap: nowrap; /*容器内项目换行方式*/
        }

            #top{
            color:burlywood;
            padding-bottom:30px;
            padding-top:10px;
        }
    </style>

</head>
<body>

    <div id="main">
        <div id="top">
            <label style="margin-bottom:10px;zoom:130%">第一步：输入要创建的试卷名称编号，点击[创建]按钮，即可创建试卷。</label><br />
            <label style="zoom:130%;">第二步：提示完成创建后，您会进入[题库列表]界面，请选择对应的题目进入试卷。</label><br />
            <label style="zoom:130%;">第三步：点击[立即创建]按钮，即可完成试卷的编写。</label>
        </div>
        <form class="layui-form layui-form-pane" action="post">
            <div class="layui-form-item" style="margin-bottom:50px;">
                <label class="layui-form-label">试卷名称：</label>
                <div class="layui-input-inline">
                    <input type="text" id="btnTestName" lay-verify="required" placeholder="请输入需要创建的试卷名称" autocomplete="off" class="layui-input">
                </div>
            </div>

            <div class="site-demo-button" id="layerDemo" style="margin-bottom: 0;">
                <button id="btnAdd" type="button" class="layui-btn" >立即创建</button>
            </div>
        </form>
    </div>

    <script>



        layui.use(['jquery', 'table', 'form'], function () {
            bindEvent();
        });

        function bindEvent() {
            $('#btnAdd').on('click', AddTest);
        }

        function AddTest() {

            if ($('#btnTestName').val() == "") {
                layui.layer.msg('请输入试卷名称！');
                return;
            }
            var url = '/TPaper/AddExamTest?id=0';
            var Obj={
                Name: $('#btnTestName').val(),
                UserID: '@ViewBag.CurUserID',
                TestStatus:"未发布"
            };

            function add(resp) { 
                if (resp != null) {
                    layui.layer.msg('创建试卷成功！');
                    location.href = `/TPaper/TopicList?id=${resp.TestID}`;
                } else {
                    layui.layer.msg('创建试卷失败！');
                }
            };

            $.post(url,Obj,add);
        }
    </script>
</body>
</html>
